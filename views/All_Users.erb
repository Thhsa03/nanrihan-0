<html>
<head>
	<title>イベント一覧</title>
</head>
<body>
<table border="1">
	<thead>
		<th>イベント名</th>
		<th>日時</th>
		<th>コメント</th>
		<th>登録日</th>
	</thead>
	<tbody>
<% @users.each_with_index do |user, i| %>
	<tr>
		<td><%= user.mail %></td>
		<td><%= user.user_name %></td>
		<td><%= user.pass %></td>
	</tr>
<% end %>

	</tbody>
</table>
<a href="/top">トップ</a><br>
<a href="/event/new">新規登録</a>
</body>
</html>